@page
@using Domain.Common
@model IndexModel
@{
    ViewData["Title"] = "Topsis";
}

<style>
    .jumbotron {
        margin-bottom: 0px;
    }
</style>

    <div class="text-white mt-5 mb-5">
        <h1 class="text-white display-4">DECIPHER - Stakeholder input survey</h1>
        <p class="lead">
            The aim of the survey is twofold, i) to inform  scenario-based impact assessments with priorities of indicators selected by stakeholders and ii) to inform the modelling community on selected indicators that could be prioritized in future model developments. 
        </p>
    </div>

@if(Model.Workspaces.Any())
{
    <div class="row">
        <div class="col-md-12">
            <h4>Policy priorities</h4>

            <partial name="_WorkspacesPartial" model="Model.Workspaces" />
        </div>
    </div>
}

