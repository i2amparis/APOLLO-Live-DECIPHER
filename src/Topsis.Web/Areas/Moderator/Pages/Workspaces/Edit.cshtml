@page
@model Workspaces.EditModel
@{
    bool isDraft = Model.Data.CurrentStatus == Domain.WorkspaceStatus.Draft;
    bool isPublished = Model.Data.CurrentStatus == Domain.WorkspaceStatus.Published;

    bool isAcceptingVotes = Model.Data.CurrentStatus == Domain.WorkspaceStatus.AcceptingVotes;

    bool isFinalized = Model.Data.IsFinalized();
    bool isArchived = Model.Data.CurrentStatus == Domain.WorkspaceStatus.Archived;
    int iconWidth = 40;
    var tableCls = "table  table-striped table-responsive-sm"; // table-responsive

    var settings = Model.Data.Questionnaire.GetSettings();

}

<h1>@Model.Data.Title</h1>

<div class="row pt-3">
    <div class="col-md-6 float-right pb-3">

        <div class="col-md-12 pb-5">
            <h4>Status</h4>
            <form asp-page-handler="changestatus" method="post" class="form">
                <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                <div class="form-group">
                    <label for="status">Status</label>
                    <select id="status" type="text" name="status" class="form-control ml-2">
                        @foreach (var item in Model.StatusOptions)
                        {
                            if (item.Value)
                            {
                                <option value="@item.Key" selected="selected">@item.Key</option>
                            }
                            else
                            {
                                <option value="@item.Key">@item.Key</option>
                            }
                        }
                    </select>
                </div>

                @if (isAcceptingVotes)
                {
                    <div class="form-group" id="finalizeOptionDiv" style="display:none;">
                        <label for="finalizeOption">Calculate Results</label>
                        <select id="finalizeOption" 
                            disabled="disabled"
                            type="text" 
                            name="finalizeOption" 
                            class="form-control ml-2" 
                            asp-items="Model.GetFinalizeOptions()">
                        </select>
                        
                    </div>
                }

                <div class="form-group ml-3">
                    <input type="submit" value="Change Status" class="btn btn-dark float-right" />
                </div>
            </form>
        </div>
        

        @if (isAcceptingVotes)
        {
            <div class="md-12 m-3">
                @*<a target="_blank" asp-area="Guest" asp-page="/Workspace/Vote" asp-route-id="@Model.Data.Id.Hash()">Check vote form</a>*@

                <h5 class="mt-3">Votes</h5>
                <a href="#" data-toggle="modal" data-target="#clear-votes-form" class="btn btn-outline-danger">Clear all votes</a>
                <a target="_blank" class="btn btn-outline-success" asp-area="Guest" asp-page="/Workspace/Vote" asp-route-id="@Model.Data.Id.Hash()">Check vote form</a>
            </div>

            <div class="md-12 m-3">
                <h5 class="mt-3">Pre-calculate report</h5>
                <table>
                    <tr>
                        <td>
                            <input id="pre-calculate-button" type="submit" value="Pre-calculate" class="btn btn-outline-success" data-id="@(Model.Data.Id.Hash())" />
                        </td>
                        <td>
                            <div id="pre-calculate-result-div"></div>
                        </td>
                    </tr>
                </table>

            </div>
        }

        @if (isFinalized)
        {
            <div class="md-12 m-3">
                <a target="_blank" asp-area="Guest" asp-page="/Workspace/Index" asp-route-id="@Model.Data.Id.Hash()">Check guest report</a>
            </div>
            <div class="md-12 m-3">
                <a target="_blank" asp-page="/Workspaces/Data" asp-route-id="@Model.Data.Id.Hash()">Check data</a>
            </div>
        }

        @if (isArchived)
        {

            <h5 class="mt-3">Danger Zone</h5>
            <a href="#" data-toggle="modal" data-target="#delete-form" class="btn btn-outline-danger">Delete workspace</a>
        }
    </div>

    <div class="col-md-6">
        <h4>Settings</h4>
        <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link btn-light active" id="general-tab" data-toggle="tab" href="#general">General</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link  btn-light" id="notifications-tab" data-toggle="tab" href="#notifications">Notifications</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link  btn-light" id="login-tab" data-toggle="tab" href="#login">Login Form</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link  btn-light" id="vote-tab" data-toggle="tab" href="#vote">Vote Form</a>
            </li>
        </ul>

        <div class="tab-content p-3" id="myTabContent">
            <div class="tab-pane fade show active" id="general" role="tabpanel">
                
                <div class="">
                    <form asp-page-handler="changeinfo" method="post">
                        <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                        <div class="form-group">
                            <label class="control-label">Title</label>
                            <input type="text" name="title" value="@Model.Data.Title" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label class="control-label">Description</label>
                            <textarea name="description" class="form-control">@Model.Data.Description</textarea>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Change Info" class="btn btn-dark float-right" />
                        </div>
                    </form>
                </div>
                
            </div>
            <div class="tab-pane fade" id="notifications" role="tabpanel">
                
                <form asp-page-handler="sendinfo" method="post">
                    <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />

                    <div class="form-group">
                        <label class="control-label">Title</label>
                        <input type="text" name="notifyTitle" value="" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Message</label>
                        <textarea name="notifyMessage" class="form-control"></textarea>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Send Info" class="btn btn-dark float-right" />
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="login" role="tabpanel">
                <form asp-page-handler="changesettings" method="post">
                        <input type="hidden" name="workspaceId" value="@Model.Data.Id.Hash()" />
                        
                    @{
                        var workspaceSettings = Model.Data.GetSettings();
                        var fields = Enum.GetValues(typeof(Domain.WorkspaceLoginFields)).Cast<Domain.WorkspaceLoginFields>().ToArray();

                        foreach (var item in fields)
                        {
                            var selected = workspaceSettings.LoginFormFields.HasFlag(item);
                            if (item == Domain.WorkspaceLoginFields.None)
                            {
                                continue;
                            }

                        <div class="form-group">
                            @if(selected)
                            {
                                    <input id="login_@(item)" type="checkbox" checked="checked" value="@(item)" name="Fields" />
                            }
                            else
                            {
                                    <input id="login_@(item)" type="checkbox" value="@(item)" name="Fields" />
                            }

                            <label for="login_@(item)" class="control-label">@item.ToString()</label>
                        </div>
                    }
                }
                    <div class="form-group">
                        <input type="submit" value="Change Settings" class="btn btn-dark float-right" />
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="vote" role="tabpanel">
                <form asp-page-handler="ChangeVoteFormSettings" method="post">
                    <input type="hidden" name="workspaceId" value="@Model.Data.Id.Hash()" />

                    @{
                        var workspaceVoteSettings = Model.Data.GetSettings();
                        
                        <div class="form-group">
                            <label for="vote_title" class="control-label">Title</label>
                            <input id="vote_title" type="text" value="@(workspaceVoteSettings.VoteFormTitle)" name="VoteTitle" class="form-control" />
                        </div>
                        
                    }
                    <div class="form-group">
                        <input type="submit" value="Change Vote Form Settings" class="btn btn-dark float-right" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@if (isFinalized)
{
    var currentRound = Model.Data.GetCurrentRound();

    <div class="row pb-5">
        <div class="col-md-12">
            <h4>Results</h4>

            <div class="col-md-12">
                <form asp-page-handler="calculateresults" class="form-inline">
                    <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />

                    <div class="form-group">
                        <label class="control-label mr-2">Round</label>
                        <select name="round" class="form-control mr-2">
                            @{
                                var options = Enum.GetValues(typeof(Domain.FeedbackRound))
                                                    .Cast<Domain.FeedbackRound>().ToArray();

                                foreach (var item in options)
                                {
                                    var itemId = (short)item;
                                    var currentId = (short)currentRound;
                                    if (itemId < currentId)
                                    {
                                        continue;
                                    }

                                    if (item == currentRound)
                                    {
                                        <option selected="selected" value="@(item)">@((short)item)</option>
                                    }
                                    else if (itemId - currentId > 1)
                                    {
                                        <option value="@(item)" disabled="disabled">@((short)item)</option>
                                    }
                                    else
                                    {
                                        <option value="@(item)">@((short)item)</option>
                                    }
                                }
                            }

                        </select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Calculate" class="btn btn-dark" />
                    </div>
                </form>
            </div>


            <div class="col-md-12 pt-2">
                <table class="@tableCls">
                    <thead>
                        <tr>
                            <th scope="col">Round</th>
                            <th scope="col">Votes</th>
                            <th scope="col">Created At</th>
                            <th scope="col">Completed At</th>
                            <th scope="col">Stakeholder Consensus AVG</th>
                        </tr>

                    </thead>
                    @foreach (var item in Model.Data.Reports)
                    {
                        <tr>
                            <td class="text-center text-dark">
                                @((short)item.Round)
                            </td>
                            <td class="text-center">
                                @item.VotesCount
                            </td>
                            <td>
                                @item.CreatedAtUtc.FormatUtcDate()
                            </td>
                            <td>
                                @item.CompletedAtUtc?.FormatUtcDate()
                            </td>
                            <td class="text-center">
                                @item.GetAnalysisResult()?.StakeholdersConsensus.Values.Average()
                            </td>
                        </tr>
                    }

                </table>
                @if (Model.Data.Reports.Count == 0)
                {
                    <p>No calculation started. Select the appropriate round and calculate the results.</p>
                }
            </div>

        </div>
    </div>
}


<div class="row">
    <div class="col-md-12">
        <h4>Algorithm Settings</h4>

        <div class="col-md-12">
            @{
                var scaleLabels = Model.GetScaleLabels(settings);
                var criteriaWeightsLabels = Model.GetWeightLabels(settings);
            }
            <form asp-page-handler="ChangeTopsisSettings">
                <input type="hidden" name="WorkspaceId" value="@Model.Data.Id.Hash()" />

                <table class="@tableCls">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center w-25">Setting</th>
                            <th scope="col" class="w-25">Value</th>
                            <th scope="col" class="w-auto">Labels</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td class="text-right">Linquistic Scale</td>
                            <td>
                                @if (isDraft)
                                {
                                    <select type="text"
                                            name="scale"
                                            class="form-control" asp-items="Model.GetScaleOptions()">
                                    </select>
                                }
                                else
                                {
                                    <span>@settings.Scale</span>
                                }
                            </td>
                            <td class="text-wrap">
                                @if (isDraft)
                                {
                                    <a href="#" data-toggle="modal" data-target="#settings-label-form" data-scale="@((short)settings.Scale)" title="@scaleLabels">@scaleLabels</a>
                                }
                                else
                                {
                                    <span>@scaleLabels</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="text-right">Rigorousness</td>
                            <td>
                                @if (isDraft)
                                {
                                    <input type="number" step="0.05" min="0" max="1" name="rigorousness" value="@settings.Rigorousness" class="form-control" />
                                }
                                else
                                {
                                    <span>@settings.Rigorousness</span>
                                }
                            </td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td class="text-right">Criteria Weight Range (1 - max)</td>
                            <td>
                                @if (isDraft)
                                {
                                    <input type="number" name="criterionWeightMax" step="1" min="2" max="10" value="@settings.CriterionWeightMax" class="form-control" />
                                }
                                else
                                {
                                    <span>@settings.CriterionWeightMax</span>
                                }
                            </td>
                            <td class="text-wrap">
                                @if (isDraft)
                                {
                                    <a href="#" data-toggle="modal" data-target="#settings-label-form" data-weight="@((short)settings.CriterionWeightMax)" title="@criteriaWeightsLabels">@criteriaWeightsLabels</a>
                                }
                                else
                                {
                                    <span>@criteriaWeightsLabels</span>
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>

                @if (isDraft)
                {
                    <div class="form-group">
                        <input type="submit" value="Change Questionnaire Settings" class="btn btn-dark float-right" />
                    </div>
                }

            </form>
        </div>

    </div>

</div>

<div class="row pb-5">

    <div class="col-md-12">
        <h4>Criteria</h4>

        <div class="col-sm-8">
            @if (isDraft)
            {
                <form asp-page-handler="addcriterion" method="post">
                    <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                    <button class="btn btn-default btn-link">Add New</button>
                </form>
            }

        </div>

        <table class="@tableCls">
            <thead>
                <tr>
                    @if (isDraft)
                    {
                        <th scope="col" width="@iconWidth">&nbsp;</th>
                        <th scope="col" width="@iconWidth">&nbsp;</th>
                    }

                    <th scope="col">Type</th>
                    <th scope="col">Title</th>
                    <th scope="col" width="@iconWidth">&nbsp;</th>
                    <th scope="col" width="@iconWidth">Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data.Questionnaire.Criteria.OrderBy(x => x.Order))
                {
                    <tr>
                        @if (isDraft)
                        {
                            <td>

                                <form asp-page-handler="deletecriterion" method="post">
                                    <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                                    <input type="hidden" name="criterionId" value="@item.Id" />
                                    <button class="btn btn-default" title="Delete Criterion"><span class="material-icons">remove_circle_outline</span></button>
                                </form>

                            </td>
                            <td>
                                <button class="btn btn-link" data-toggle="modal" data-target="#criterion-title-form"
                                        data-criterionid="@item.Id"
                                        data-criteriontypeid="@item.Type.ToString()"
                                        data-criterion-title="@item.Title">
                                    <span class="material-icons">edit</span>
                                </button>

                            </td>
                        }
                        <td>
                            @item.Type.ToString()
                        </td>
                        <td>
                            @item.Title
                        </td>

                        <td>
                            @if (item.Order != Model.Data.Questionnaire.Criteria.Count)
                            {
                                <form asp-page-handler="changeorder" method="post">
                                    <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                                    <input type="hidden" name="criterionId" value="@item.Id" />
                                    <input type="hidden" name="moveup" value="false" />
                                    <button class="btn btn-default"><span class="material-icons">arrow_downward</span></button>
                                </form>
                            }

                        </td>
                        <td>
                            @if (item.Order > 1)
                            {
                                <form asp-page-handler="changeorder" method="post">
                                    <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                                    <input type="hidden" name="criterionId" value="@item.Id" />
                                    <input type="hidden" name="moveup" value="true" />
                                    <button class="btn btn-default"><span class="material-icons">arrow_upward</span></button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<div class="row">

    <div class="col-md-12">
        <h4>Alternatives</h4>

        <div class="col-md-7">
            @if (isDraft)
            {
                <div class="col md-6">
                    <form asp-page-handler="addalternative" method="post">
                        <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                        <button class="btn btn-default btn-link">Add New</button>
                    </form>
                </div>
            }

        </div>


        <table class="@tableCls">
            <thead>
                <tr>
                    <th scope="col" width="@iconWidth">&nbsp;</th>
                    <th scope="col" width="@iconWidth">&nbsp;</th>
                    <th scope="col">Title</th>
                    <th scope="col" width="@iconWidth">&nbsp;</th>
                    <th scope="col" width="@iconWidth">Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data.Questionnaire.Alternatives.OrderBy(x => x.Order))
                {
                    <tr>

                        <td>
                            @if (Model.Data.CurrentStatus == Domain.WorkspaceStatus.Draft)
                            {
                                <form asp-page-handler="deletealternative" method="post">
                                    <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                                    <input type="hidden" name="criterionId" value="@item.Id" />
                                    <button class="btn btn-default" title="Delete Criterion"><span class="material-icons">remove_circle_outline</span></button>
                                </form>
                            }
                        </td>
                        <td>
                            @if (isDraft)
                            {
                                <button class="btn btn-link" data-toggle="modal" data-target="#criterion-title-form"
                                        data-alternativeid="@item.Id" data-alternative-title="@item.Title">
                                    <span class="material-icons">edit</span>
                                </button>
                            }
                        </td>
                        <td>
                            @item.Title
                        </td>

                        <td>
                            @if (item.Order != Model.Data.Questionnaire.Alternatives.Count)
                            {
                                <form asp-page-handler="changeorder" method="post">
                                    <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                                    <input type="hidden" name="alternativeId" value="@item.Id" />
                                    <input type="hidden" name="moveup" value="false" />
                                    <button class="btn btn-default"><span class="material-icons">arrow_downward</span></button>
                                </form>
                            }

                        </td>
                        <td>
                            @if (item.Order > 1)
                            {
                                <form asp-page-handler="changeorder" method="post">
                                    <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                                    <input type="hidden" name="alternativeId" value="@item.Id" />
                                    <input type="hidden" name="moveup" value="true" />
                                    <button class="btn btn-default"><span class="material-icons">arrow_upward</span></button>
                                </form>
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<div>
    <!-- Modal -->
    <div class="modal fade" id="criterion-title-form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title" id="exampleModalLabel">Change <span id="entity"></span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="form-criterion" asp-page-handler="changecriterion" method="post">
                    <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                    <input type="hidden" id="criterionid" name="criterionid" value="" />

                    <div class="modal-body">

                        <div class="clearfix">
                            <label>Type</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input name="criteriontype" class="form-check-input" type="radio" id="radio-benefit" value="@((int)Domain.CriterionType.Benefit)">
                            <label class="form-check-label" for="radio-benefit">@(Domain.CriterionType.Benefit)</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input name="criteriontype" class="form-check-input" type="radio" id="radio-cost" value="@((int)Domain.CriterionType.Cost)">
                            <label class="form-check-label" for="radio-cost">@(Domain.CriterionType.Cost)</label>
                        </div>

                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" id="criterion-title" aria-describedby="titleHelp" placeholder="Change title">
                        </div>

                    </div>
                    <div class="modal-footer border-top-0 d-flex ">
                        <button type="submit" class="btn btn-dark">Submit</button>
                    </div>
                </form>

                <form id="form-alternative" asp-page-handler="changealternative" method="post">
                    <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                    <input type="hidden" id="alternativeid" name="alternativeid" value="" />

                    <div class="modal-body">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control" id="alternative-title" aria-describedby="titleHelp" placeholder="Change title">
                                        @*<small id="emailHelp" class="form-text text-muted">Your information is safe with us.</small>*@
                        </div>
                    </div>
                    <div class="modal-footer border-top-0 d-flex ">
                        <button type="submit" class="btn btn-dark">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="delete-form" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Workspace</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-page-handler="delete" class="no-ajax">
                        <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                        <p>This will delete all data. Be careful!</p>
                        <div class="form-group">
                            <input type="submit" value="Delete Workspace" class="btn btn-danger float-right" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="clear-votes-form" tabindex="-1" role="dialog" aria-labelledby="clearVotesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title" id="clearVotesModalLabel">Clear All Votes</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-page-handler="clearvotes">
                        <input type="hidden" name="id" value="@Model.Data.Id.Hash()" />
                        <p>This will delete all guests votes. Be careful!</p>
                        <div class="form-group">
                            <input type="submit" value="Clear Existing Votes" class="btn btn-danger float-right" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="settings-label-form" tabindex="-1" role="dialog" aria-labelledby="settingsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header border-bottom-0">
