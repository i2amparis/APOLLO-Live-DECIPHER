                                    }
                                }
                            </tbody>
                        </table>

                        <div class="form-group">
                            <input type="submit" value="Change Alternatives Labels" class="btn btn-dark float-right" />
                        </div>
                    </form>

                    <form id="form-criteria-range" asp-page-handler="ChangeCriteriaWeightsRange">
                        <input type="hidden" name="WorkspaceId" value="@Model.Data.Id.Hash()" />

